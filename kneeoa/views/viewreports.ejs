<style type="text/css">
  table, th, td {
    border: 1px solid black;
    border-collapse: collapse;
  }
</style>
<h1 class="mt-4">View Reports</h1>
<%- include('partials/messages'); %>
<form action="/viewreports" method="post">
  <input type="text" name="searchquery" value="" placeholder="Enter search query">
  <select name="searchtype" id="searchtype">
    <option value="pn">Patient name</option>
    <option value="gn">Gender</option>
    <option value="gr">Grade</option>
    <option value="ag">Age</option>
  </select>
  <button class="btn btn-secondary" type="submit" name="button">Search</button>
</form>
<br><br>
<% if(data == "nothing") { %>
  <p class="lead mb-3">No results found</p>
<% } %>
<% if(data !== "nothing") { %>
<table style="width:100%">
  <tr>
    <th> Patient Name </th>
    <th> Age </th>
    <th> Grade </th>
    <th> Gender </th>
    <th> Download Report </th>
  </tr>
  <% data.forEach(function (item){ %>
    <tr>
      <td> <%= item.patientname %> </td>
      <td> <%= item.age %> </td>
      <td> <%= item.grade %> </td>
      <td> <%= item.gender %> </td>
      <td> <a href="<%= item.filename %>.pdf" download>Download here</a> </td>
    </tr>
  <% }); %>

</table>
<% } %>
<a href="/dashboard" class="btn btn-secondary">Back</a>
<a href="/users/logout" class="btn btn-secondary">Logout</a>
